{
  "compilerOptions": {
    /* === CIBLE ET MODULE === */
    "target": "ES2020",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "module": "esnext",
    "moduleResolution": "bundler",
    "jsx": "preserve",
    /* === QUALITÉ ET ERREURS === */
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "incremental": true,
    "types": [
      "node",
      "react",
      "react-dom",
      "prop-types",
      "qrcode",
      "json5"
    ],
    /* === PLUGIN NEXT === */
    "plugins": [
      {
        "name": "next"
      }
    ],
    /* === RACCOURCIS D’IMPORT === */
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "*"
      ]
    }
  },
  /* === INCLUSIONS / EXCLUSIONS === */
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "dist"
  ]
}
